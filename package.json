{
  "name": "hydra-protocol",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build:localnet": "anchor build -- --features \"localnet\"",
    "build:devnet": "anchor build -- --features \"devnet\"",
    "build:testnet": "anchor build -- --features \"testnet\"",
    "build:mainnet": "anchor build -- --features \"mainnet\"",
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "watch": "turbo run watch --parallel",
    "lint": "prettier --check .",
    "clean": "turbo run clean",
    "private-key": "ts-node ./scripts/private-key.ts",
    "prepare": "husky install"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@project-serum/anchor": "^0.23.0",
    "@project-serum/common": "^0.0.1-beta.3",
    "@project-serum/serum": "^0.13.61",
    "@project-serum/tokens": "^0.0.7",
    "@solana/spl-token": "^0.2.0",
    "bs58": "^5.0.0",
    "concurrently": "^7.0.0",
    "pascal-case": "^3.1.2",
    "prettier": "^2.5.1",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@types/expand-tilde": "^2.0.0",
    "@types/mocha": "^9.0.0",
    "arg": "^5.0.1",
    "chai": "^4.3.4",
    "expand-tilde": "^2.0.2",
    "husky": "^7.0.4",
    "hydra-ts": "*",
    "ipfs-deploy": "^11.2.0",
    "mocha": "^9.0.3",
    "toml": "^3.0.0",
    "ts-mocha": "^9.0.0",
    "turbo": "^1.1.2",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "@solana/spl-token": "0.2.0",
    "@solana/buffer-layout": "4.0.0",
    "@solana/buffer-layout-utils": "0.2.0",
    "@project-serum/anchor": "0.23.0",
    "rxjs": "7.5.4",
    "typescript": "4.5.5",
    "playwright-core": "1.19.2",
    "playwright": "1.19.2",
    "@playwright/test": "1.19.2"
  },
  "workspaces": {
    "packages": [
      "target",
      "sdks/*",
      "sdks/wasm-loader-ts/wasm-test",
      "examples/*",
      "app"
    ],
    "nohoist": [
      "app/**",
      "examples/sdk/**",
      "**/@jest",
      "**/@jest/**",
      "**/jest",
      "**/jest/**",
      "**/jest-*",
      "**/@solana/wallet-adapter-base",
      "**/@solana/wallet-adapter-base/**",
      "**/@solana/wallet-adapter-react",
      "**/@solana/wallet-adapter-react/**",
      "**/@solana/wallet-adapter-react-ui",
      "**/@solana/wallet-adapter-react-ui/**",
      "**/@solana/wallet-adapter-wallets",
      "**/@solana/wallet-adapter-wallets/**"
    ]
  },
  "packageManager": "yarn@1.22.17"
}
