{
  "name": "hydra-protocol",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build:localnet": "anchor build -- --features \"localnet\"",
    "build:devnet": "anchor build -- --features \"devnet\"",
    "build:testnet": "anchor build -- --features \"testnet\"",
    "build:mainnet": "anchor build -- --features \"mainnet\"",
    "deploy-to-create-idl": "concurrently -rks first \"anchor build && solana-test-validator\" \"wait-on tcp:8899 && anchor deploy\"",
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "watch": "turbo run watch --parallel",
    "lint": "prettier --check ."
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@project-serum/anchor": "^0.20.1",
    "@project-serum/common": "^0.0.1-beta.3",
    "@project-serum/serum": "^0.13.61",
    "@project-serum/tokens": "^0.0.7",
    "concurrently": "^7.0.0",
    "prettier": "^2.5.1",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@types/expand-tilde": "^2.0.0",
    "@types/mocha": "^9.0.0",
    "arg": "^5.0.1",
    "chai": "^4.3.4",
    "expand-tilde": "^2.0.2",
    "hydra-ts": "*",
    "mocha": "^9.0.3",
    "toml": "^3.0.0",
    "ts-mocha": "^9.0.0",
    "turbo": "^1.1.2",
    "typescript": "^4.3.5"
  },
  "workspaces": {
    "packages": [
      "target",
      "sdks/*",
      "sdks/wasm-loader-ts/wasm-test",
      "examples/*",
      "app"
    ],
    "nohoist": [
      "@solana/wallet-adapter-base",
      "@solana/wallet-adapter-react",
      "@solana/wallet-adapter-react-ui",
      "@solana/wallet-adapter-wallets",
      "app/react-scripts",
      "app/react-scripts/**",
      "examples/sdk/react-scripts",
      "examples/sdk/react-scripts/**",
      "sdks/hydra-ts/jest",
      "sdks/hydra-ts/jest/**",
      "sdks/hydra-ts/jest-*",
      "sdks/hydra-ts/@jest",
      "sdks/hydra-ts/@jest/**",
      "**/react-scripts",
      "**/react-scripts/**",
      "**/@jest",
      "**/@jest/**",
      "**/jest",
      "**/jest/**",
      "**/jest-*"
    ]
  },
  "packageManager": "yarn@1.22.17"
}
